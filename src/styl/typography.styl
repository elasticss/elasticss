// TYPOGRAPHY
//
// ––––––––––––––––––––––––––––––––––––––––––––––––

body
    color: text
    font-family: 'Roboto', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif

.serif
    font-family: 'Roboto Slab', serif

b,
strong
    font-weight: 500

q
    quotes: "\00ab" "\00bb" "\201C" "\201D"


h1,
h2,
h3,
h4,
h5,
h6
    font-weight: 300
    margin-bottom: 2.0rem
    margin-top: 0

h1
    font-size: 3rem
    line-height: 1.2

h2
    font-size: 2.6rem
    line-height: 1.25

h3
    font-size: 2.4rem
    line-height: 1.3

h4
    font-size: 2rem
    line-height: 1.4

h5
    font-size: 1.8rem
    line-height: 1.5

h6
    font-size: 1.6rem
    line-height: 1.6

@media (min-width: 550px)
    h1
        font-size: 3.6rem

    h2
        font-size: 3rem

    h3
        font-size: 2.4rem

    h4
        font-size: 2rem

    h5
        font-size: 1.8rem

    h6
        font-size: 1.6rem
